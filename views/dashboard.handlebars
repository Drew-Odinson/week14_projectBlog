{{!-- Use the main layout --}}
{{!< layout }}

<header>
  <nav>
    <ul>
      <li><a href="/">Home</a></li>
      {{#if loggedIn}}
        <li><a href="/dashboard">Dashboard</a></li>
        <li><a href="/logout">Logout</a></li>
      {{else}}
        <li><a href="/login">Login</a></li>
      {{/if}}
    </ul>
  </nav>
  <h1>Dashboard</h1>
</header>

<main>
  {{#if userPosts}}
    {{!-- Loop through the user's blog posts and display them --}}
    {{#each userPosts as |post|}}
      <article>
        <h2>{{post.title}}</h2>
        <p>{{post.content}}</p>
        <button>Edit</button>
        <button>Delete</button>
      </article>
    {{/each}}
  {{else}}
    <p>You have not created any posts yet.</p>
  {{/if}}
  <button><a href="/new-post">Add New Post</a></button>
</main>
